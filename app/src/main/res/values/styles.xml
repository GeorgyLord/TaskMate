<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyNavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:elevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.NoCorners</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>

    <style name="ShapeAppearanceOverlay.NoCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="WhiteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="buttonAddTask" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">#FFFFFF</item>
        <item name="backgroundTint">#1A73E8</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="buttonOpeningFormCreatingTask" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="backgroundTint">#CDE4FF</item>

    </style>
</resources>